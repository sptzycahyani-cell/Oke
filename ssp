revertBtn.Position = UDim2.new(0.5,-80,0.83,0)
revertBtn.BackgroundColor3 = Color3.fromRGB(90,40,40)
revertBtn.Text = "REVERT MORPH"
revertBtn.TextColor3 = Color3.new(1,1,1)
revertBtn.Font = Enum.Font.GothamBold
revertBtn.TextSize = 14
revertBtn.Parent = frame
Instance.new("UICorner", revertBtn)

