local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

-- =======================================
-- GLOBAL FOR SPECTATE + MORPH + FLY
-- =======================================
local spectating = false
local spectateTarget = nil
local flying = false
local flySpeed = 50 -- Kecepatan terbang dasar

local originalDescription = nil
local originalAnimate = nil

local flyBtn -- Deklarasi variabel tombol Fly di awal

-- Fungsi untuk menghentikan Fly (akan digunakan di stopSpectate)
local function stopFly()
    flying = false
    
    local char = player.Character
    if char then
        local hum = char:FindFirstChildOfClass("Humanoid")
        if hum then
            hum.PlatformStand = false
            if not spectating then
                camera.CameraSubject = hum
            end
        end
        if char:FindFirstChild("HumanoidRootPart") and char.HumanoidRootPart:FindFirstChild("FlyVelocity") then
            char.HumanoidRootPart.FlyVelocity:Destroy()
        end
    end
    
    if flyBtn then
        flyBtn.Text = "FLY (OFF)"
        flyBtn.BackgroundColor3 = Color3.fromRGB(0,150,150)
    end
end

local function startFly()
    local char = player.Character
    if not char then return end

    local hum = char:FindFirstChildOfClass("Humanoid")
    local root = char:FindFirstChild("HumanoidRootPart")
    if not (hum and root) then return end
    
    if spectating then stopSpectate() end

    flying = true
    hum.PlatformStand = true
    camera.CameraSubject = root

    local velocity = Instance.new("BodyVelocity")
    velocity.MaxForce = Vector3.new(math.huge, math.huge, math.huge)
    velocity.P = 1250
    velocity.Name = "FlyVelocity"
    velocity.Parent = root
    
    task.spawn(function()
        while flying and char.Parent do
            task.wait()
            local camCF = camera.CFrame
            local moveVector = Vector3.new()
            local currentSpeed = flySpeed
            
            local moveDir = player:GetMoveDirection()
            local relativeMoveDir = camCF:VectorToObjectSpace(moveDir)
            
            moveVector += camCF.LookVector * relativeMoveDir.Z 
            moveVector += camCF.RightVector * relativeMoveDir.X
            
            if player:GetControls().MoveState == Enum.ComputerMoveState.Jump then
                moveVector += Vector3.new(0, 1, 0)
            end
            
            if player:GetControls().MoveState == Enum.ComputerMoveState.Sprint then
                currentSpeed = flySpeed * 2 
            end
            
            if moveVector.Magnitude > 0 then
                velocity.Velocity = moveVector.Unit * currentSpeed
            else
                velocity.Velocity = Vector3.new(0,0,0)
            end
        end
        
        if root and root:FindFirstChild("FlyVelocity") then
            root.FlyVelocity:Destroy()
        end
    end)
end

local function stopSpectate()
    spectating = false
    spectateTarget = nil
    
    if flying then stopFly() end 

    if player.Character then
        local hum = player.Character:FindFirstChildOfClass("Humanoid")
        if hum then
            camera.CameraSubject = hum
        end
    end
end

task.spawn(function()
    while task.wait() do
        if spectating and spectateTarget and spectateTarget.Character then
            local hum = spectateTarget.Character:FindFirstChildOfClass("Humanoid")
            if hum then
                camera.CameraSubject = hum
            end
        end
    end
end)

-- =======================================
-- INTRO
-- =======================================
do
    local introGui = Instance.new("ScreenGui")
    introGui.Name = "IntroAnimation"
    introGui.Parent = player:WaitForChild("PlayerGui")

    local introLabel = Instance.new("TextLabel")
    introLabel.Size = UDim2.new(0, 300, 0, 50)
    introLabel.Position = UDim2.new(0.5, -150, 0.4, 0)
    introLabel.BackgroundTransparency = 1
    introLabel.Text = "By : Xraxor"
    introLabel.TextColor3 = Color3.fromRGB(40,40,40)
    introLabel.Font = Enum.Font.GothamBold
    introLabel.TextScaled = true
    introLabel.Parent = introGui

    TweenService:Create(introLabel, TweenInfo.new(1.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true),
        {Position = UDim2.new(0.5, -150,0.42,0)}):Play()

    TweenService:Create(introLabel, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true),
        {TextColor3 = Color3.fromRGB(0,0,0)}):Play()

    task.wait(2)
    local fade = TweenService:Create(introLabel, TweenInfo.new(0.4), {TextTransparency = 1})
    fade:Play()
    fade.Completed:Connect(function()
        introGui:Destroy()
    end)
end

