-- ============================
-- TELEPORT PLAYER FEATURE
-- ============================
local function createPlayerItem(plr)
    local item = Instance.new("Frame")
    item.Size = UDim2.new(1, -10, 0, 50)
    item.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    item.Parent = scrollFrame

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 10)
    corner.Parent = item

    local img = Instance.new("ImageLabel")
    img.Size = UDim2.new(0, 40, 0, 40)
    img.Position = UDim2.new(0, 5, 0.5, -20)
    img.BackgroundTransparency = 1
    img.Image = "rbxthumb://type=AvatarHeadShot&id=" .. plr.UserId .. "&w=150&h=150"
    img.Parent = item

    local nameLabel = Instance.new("TextLabel")
    nameLabel.Size = UDim2.new(1, -100, 1, 0)
    nameLabel.Position = UDim2.new(0, 50, 0, 0)
    nameLabel.BackgroundTransparency = 1
    nameLabel.Text = plr.Name
    nameLabel.TextColor3 = Color3.new(1, 1, 1)
    nameLabel.Font = Enum.Font.GothamBold
    nameLabel.TextSize = 14
    nameLabel.TextXAlignment = Enum.TextXAlignment.Left
    nameLabel.Parent = item

    local tpBtn = Instance.new("TextButton")
    tpBtn.Size = UDim2.new(0, 60, 0, 30)
    tpBtn.Position = UDim2.new(1, -70, 0.5, -15)
    tpBtn.BackgroundColor3 = Color3.fromRGB(60, 120, 255)
    tpBtn.Text = "TP"
    tpBtn.TextColor3 = Color3.new(1,1,1)
    tpBtn.Font = Enum.Font.GothamBold
    tpBtn.TextSize = 14
    tpBtn.Parent = item

    local btnCorner = Instance.new("UICorner")
    btnCorner.Parent = tpBtn

    tpBtn.MouseButton1Click:Connect(function()
        local myChar = player.Character
        local targetChar = plr.Character
        if myChar and targetChar and myChar:FindFirstChild("HumanoidRootPart") and targetChar:FindFirstChild("HumanoidRootPart") then
            myChar.HumanoidRootPart.CFrame = targetChar.HumanoidRootPart.CFrame + Vector3.new(0, 2, 0)
        end
    end)
end

-- Load player list
for _,plr in pairs(Players:GetPlayers()) do
    if plr ~= player then createPlayerItem(plr) end
end

Players.PlayerAdded:Connect(function(plr)
    if plr ~= player then createPlayerItem(plr) end
end)

Players.PlayerRemoving:Connect(function(plr)
    for _, v in pairs(scrollFrame:GetChildren()) do
        if v:IsA("Frame") then
            local txt = v:FindFirstChildWhichIsA("TextLabel")
            if txt and txt.Text == plr.Name then
                v:Destroy()
            end
        end
    end
end)

-- =========================================================
-- =============== BRING PART FLY FEATURE ==================
-- =========================================================

local bringPartEnabled = false
local attachedPart = nil
local attachment0, attachment1 = nil, nil
local alignPos, alignOri = nil, nil

-- UI BUTTON BRING PART
local bringButton = Instance.new("TextButton")
bringButton.Size = UDim2.new(0, 160, 0, 35)
bringButton.Position = UDim2.new(0.5, -80, 0.5, 10)
bringButton.BackgroundColor3 = Color3.fromRGB(120, 50, 50)
bringButton.Text = "BRING PART : OFF"
bringButton.TextColor3 = Color3.new(1, 1, 1)
bringButton.Font = Enum.Font.GothamBold
bringButton.TextSize = 14
bringButton.Parent = frame

local bringCorner = Instance.new("UICorner")
bringCorner.CornerRadius = UDim.new(0, 10)
bringCorner.Parent = bringButton

-- Scan part terdekat & unanchored
local function scanNearestUnanchored()
    local char = player.Character
    if not char then return end

    local hrp = char:FindFirstChild("HumanoidRootPart")
    if not hrp then return end

    local nearest, minDist = nil, 30
    for _, obj in ipairs(workspace:GetDescendants()) do
        if obj:IsA("BasePart") and not obj.Anchored and obj.CanCollide then
            local dist = (obj.Position - hrp.Position).Magnitude
            if dist < minDist then
                minDist = dist
                nearest = obj
            end
        end
    end
    return nearest
end

-- Attach part
local function attachPart(part)
    local hrp = player.Character and player.Character:FindFirstChild("HumanoidRootPart")
    if not hrp or not part then return end

    attachment0 = Instance.new("Attachment", hrp)
    attachment0.Position = Vector3.new(0, -2, -3)

    attachment1 = Instance.new("Attachment", part)

    alignPos = Instance.new("AlignPosition", part)
    alignPos.Attachment0 = attachment1
    alignPos.Attachment1 = attachment0
    alignPos.Responsiveness = 200
    alignPos.MaxForce = 1000000

    alignOri = Instance.new("AlignOrientation", part)
    alignOri.Attachment0 = attachment1
    alignOri.Attachment1 = attachment0
    alignOri.Responsiveness = 200
    alignOri.MaxTorque = 1000000

    attachedPart = part
end

-- Hapus attach
local function detachPart()
    if attachedPart then
        for _, v in pairs(attachedPart:GetChildren()) do
            if v:IsA("Attachment") or v:IsA("AlignPosition") or v:IsA("AlignOrientation") then
                v:Destroy()
            end
        end
    end

    if attachment0 then attachment0:Destroy() end
    attachedPart = nil
end

-- BUTTON ON/OFF ACTION
bringButton.MouseButton1Click:Connect(function()
    bringPartEnabled = not bringPartEnabled

    if bringPartEnabled then
        bringButton.BackgroundColor3 = Color3.fromRGB(60, 160, 60)
        bringButton.Text = "BRING PART : ON"

        local target = scanNearestUnanchored()
        if target then
            attachPart(target)
        else
            bringButton.Text = "NO PART FOUND"
            task.wait(1)
            bringButton.Text = "BRING PART : ON"
        end
    else
        bringButton.BackgroundColor3 = Color3.fromRGB(120, 50, 50)
        bringButton.Text = "BRING PART : OFF"
        detachPart()
    end
end)

-- ============================
-- CLOSE GUI BUTTON
-- ============================
closeBtn.MouseButton1Click:Connect(function()
    screenGui:Destroy()
end)
