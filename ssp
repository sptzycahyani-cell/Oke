-------------------------------------------------------------
-- SIDE MENU TELEPORT PLAYER
-------------------------------------------------------------
local iconButton = Instance.new("ImageButton")
iconButton.Size = UDim2.new(0, 25, 0, 25)
iconButton.Position = UDim2.new(1, -35, 0, 5)
iconButton.BackgroundTransparency = 1
iconButton.Image = "rbxassetid://6031097229"
iconButton.Parent = frame

local sideFrame = Instance.new("Frame")
sideFrame.Size = UDim2.new(0, 170, 0, 240)
sideFrame.Position = UDim2.new(1, 10, 0, 0)
sideFrame.BackgroundColor3 = Color3.fromRGB(25, 25, 25)
sideFrame.Visible = false
sideFrame.Parent = frame

local sideCorner = Instance.new("UICorner")
sideCorner.CornerRadius = UDim.new(0, 12)
sideCorner.Parent = sideFrame

local scroll = Instance.new("ScrollingFrame")
scroll.Size = UDim2.new(1, 0, 1, -5)
scroll.Position = UDim2.new(0, 0, 0, 5)
scroll.BackgroundTransparency = 1
scroll.CanvasSize = UDim2.new(0, 0, 0, 0)
scroll.ScrollBarThickness = 6
scroll.Parent = sideFrame

local layout = Instance.new("UIListLayout")
layout.Parent = scroll
layout.Padding = UDim.new(0, 5)
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.SortOrder = Enum.SortOrder.LayoutOrder

layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
	scroll.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y + 10)
end)

iconButton.MouseButton1Click:Connect(function()
	sideFrame.Visible = not sideFrame.Visible
end)

-------------------------------------------------------------
-- TELEPORT PLAYER
-------------------------------------------------------------
local function addPlayer(plr)
    local item = Instance.new("Frame")
    item.Size = UDim2.new(1, -10, 0, 50)
    item.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    item.Parent = scroll

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = item

    local head = Instance.new("ImageLabel")
    head.Size = UDim2.new(0, 40, 0, 40)
    head.Position = UDim2.new(0, 5, 0.5, -20)
    head.Image = "rbxthumb://type=AvatarHeadShot&id="..plr.UserId.."&w=150&h=150"
    head.BackgroundTransparency = 1
    head.Parent = item

    local name = Instance.new("TextLabel")
    name.Size = UDim2.new(1, -100, 1, 0)
    name.Position = UDim2.new(0, 50, 0, 0)
    name.Text = plr.Name
    name.BackgroundTransparency = 1
    name.TextColor3 = Color3.new(1, 1, 1)
    name.Font = Enum.Font.GothamBold
    name.TextSize = 14
    name.TextXAlignment = Enum.TextXAlignment.Left
    name.Parent = item

    local tp = Instance.new("TextButton")
    tp.Size = UDim2.new(0, 60, 0, 30)
    tp.Position = UDim2.new(1, -70, 0.5, -15)
    tp.Text = "TP"
    tp.Font = Enum.Font.GothamBold
    tp.TextSize = 14
    tp.TextColor3 = Color3.new(1, 1, 1)
    tp.BackgroundColor3 = Color3.fromRGB(60, 120, 255)
    tp.Parent = item

    local tpCorner = Instance.new("UICorner")
    tpCorner.Parent = tp

    tp.MouseButton1Click:Connect(function()
        local me = player.Character
        local target = plr.Character
        if me and target and me:FindFirstChild("HumanoidRootPart") and target:FindFirstChild("HumanoidRootPart") then
            me.HumanoidRootPart.CFrame = target.HumanoidRootPart.CFrame + Vector3.new(0,2,0)
        end
    end)
end

for _,plr in pairs(Players:GetPlayers()) do
    if plr ~= player then
        addPlayer(plr)
    end
end

Players.PlayerAdded:Connect(function(plr)
	if plr ~= player then addPlayer(plr) end
end)

Players.PlayerRemoving:Connect(function(plr)
	for _,v in ipairs(scroll:GetChildren()) do
		if v:IsA("Frame") then
			local n = v:FindFirstChildWhichIsA("TextLabel")
			if n and n.Text == plr.Name then v:Destroy() end
		end
	end
end)

