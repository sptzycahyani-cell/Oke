--==========================================
-- Mount Atin V3 - Stable Version
--==========================================
local Players = game:GetService("Players")
local TweenService = game:GetService("TweenService")
local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

-- =======================
-- STATE VARIABLES
-- =======================
local flying = false
local flySpeed = 50
local spectating = false
local spectateTarget = nil

local originalDescription = nil
local originalAnimate = nil

-- =======================
-- FUNCTIONS
-- =======================
local function stopFly()
    flying = false
    local char = player.Character
    if char then
        local hum = char:FindFirstChildOfClass("Humanoid")
        if hum then hum.PlatformStand = false end
        if char:FindFirstChild("HumanoidRootPart") then
            local f = char.HumanoidRootPart:FindFirstChild("FlyVelocity")
            if f then f:Destroy() end
        end
        if not spectating and hum then
            camera.CameraSubject = hum
        end
    end
end

local function startFly()
    local char = player.Character
    if not char then return end
    local hum = char:FindFirstChildOfClass("Humanoid")
    local root = char:FindFirstChild("HumanoidRootPart")
    if not (hum and root) then return end

    if spectating then spectating = false; spectateTarget = nil end

    flying = true
    hum.PlatformStand = true
    camera.CameraSubject = root

    local velocity = Instance.new("BodyVelocity")
    velocity.MaxForce = Vector3.new(1e5,1e5,1e5)
    velocity.P = 1250
    velocity.Name = "FlyVelocity"
    velocity.Parent = root

    task.spawn(function()
        while flying and char.Parent do
            task.wait()
            local moveVector = Vector3.new()
            local controls = player:GetMouse()
            local camCF = camera.CFrame
            local direction = Vector3.new()
            -- Simple WASD movement
            if game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.W) then
                direction = direction + camCF.LookVector
            end
            if game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.S) then
                direction = direction - camCF.LookVector
            end
            if game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.A) then
                direction = direction - camCF.RightVector
            end
            if game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.D) then
                direction = direction + camCF.RightVector
            end
            if game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.Space) then
                direction = direction + Vector3.new(0,1,0)
            end
            if game:GetService("UserInputService"):IsKeyDown(Enum.KeyCode.LeftShift) then
                direction = direction - Vector3.new(0,1,0)
            end
            if direction.Magnitude > 0 then
                velocity.Velocity = direction.Unit * flySpeed
            else
                velocity.Velocity = Vector3.new(0,0,0)
            end
        end
        if root:FindFirstChild("FlyVelocity") then root.FlyVelocity:Destroy() end
    end)
end

local function stopSpectate()
    spectating = false
    spectateTarget = nil
    if flying then stopFly() end
    if player.Character then
        local hum = player.Character:FindFirstChildOfClass("Humanoid")
        if hum then camera.CameraSubject = hum end
    end
end

task.spawn(function()
    while true do
        task.wait(0.1)
        if spectating and spectateTarget and spectateTarget.Character then
            local hum = spectateTarget.Character:FindFirstChildOfClass("Humanoid")
            if hum then camera.CameraSubject = hum end
        end
    end
end)

local function fullClone(targetPlr)
    local myChar = player.Character
    local tChar = targetPlr.Character
    if not (myChar and tChar) then return end
    local myHum = myChar:FindFirstChildOfClass("Humanoid")
    local tHum = tChar:FindFirstChildOfClass("Humanoid")
    if not (myHum and tHum) then return end

    if not originalDescription then
        originalDescription = myHum:GetAppliedDescription()
        local anim = myChar:FindFirstChild("Animate")
        if anim then originalAnimate = anim:Clone() end
    end

    -- Destroy existing accessories & clothes
    for _,v in ipairs(myChar:GetChildren()) do
        if v:IsA("Accessory") or v:IsA("Shirt") or v:IsA("Pants") or v:IsA("ShirtGraphic") then
            v:Destroy()
        end
    end

    local desc = tHum:GetAppliedDescription()
    myHum:ApplyDescription(desc)

    local oldAnim = myChar:FindFirstChild("Animate")
    if oldAnim then oldAnim:Destroy() end
    local tAnim = tChar:FindFirstChild("Animate")
    if tAnim then tAnim:Clone().Parent = myChar end

    task.wait(0.2)
    myHum:BuildRigFromAttachments()
end

local function revertMorph()
    if not originalDescription then return end
    local char = player.Character
    if not char then return end
    local hum = char:FindFirstChildOfClass("Humanoid")
    if not hum then return end

    hum:ApplyDescription(originalDescription)

    local oldAnim = char:FindFirstChild("Animate")
    if oldAnim then oldAnim:Destroy() end
    if originalAnimate then originalAnimate:Clone().Parent = char end

    task.wait(0.2)
    hum:BuildRigFromAttachments()
end

-- =======================
-- GUI
-- =======================
local gui = Instance.new("ScreenGui")
gui.Name = "MountAtinV3"
gui.ResetOnSpawn = false
gui.Parent = player.PlayerGui

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0,260,0,380)
frame.Position = UDim2.new(0.5,-130,0.3,0)
frame.BackgroundColor3 = Color3.fromRGB(20,20,20)
frame.Active = true
frame.Draggable = true
frame.Parent = gui
Instance.new("UICorner", frame)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0,35)
title.BackgroundTransparency = 1
title.TextColor3 = Color3.new(1,1,1)
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.Text = "Mount Atin V3"
title.Parent = frame

-- Info player di atas Summit
local infoFrame = Instance.new("Frame")
infoFrame.Size = UDim2.new(0,180,0,60)
infoFrame.Position = UDim2.new(0.5,-90,0.5,-40)
infoFrame.BackgroundColor3 = Color3.fromRGB(35,35,35)
infoFrame.Parent = frame
Instance.new("UICorner", infoFrame)

local avatar = Instance.new("ImageLabel")
avatar.Size = UDim2.new(0,45,0,45)
avatar.Position = UDim2.new(0,5,0,5)
avatar.BackgroundTransparency = 1
avatar.Image = "rbxthumb://type=AvatarHeadShot&id="..player.UserId.."&w=150&h=150"
avatar.Parent = infoFrame

local nameLabel = Instance.new("TextLabel")
nameLabel.Size = UDim2.new(1,-55,0,25)
nameLabel.Position = UDim2.new(0,55,0,5)
nameLabel.BackgroundTransparency = 1
nameLabel.TextColor3 = Color3.new(1,1,1)
nameLabel.Font = Enum.Font.GothamBold
nameLabel.TextSize = 14
nameLabel.Text = player.Name
nameLabel.TextXAlignment = Enum.TextXAlignment.Left
nameLabel.Parent = infoFrame

local usernameLabel = Instance.new("TextLabel")
usernameLabel.Size = UDim2.new(1,-55,0,25)
usernameLabel.Position = UDim2.new(0,55,0,30)
usernameLabel.BackgroundTransparency = 1
usernameLabel.TextColor3 = Color3.fromRGB(180,180,180)
usernameLabel.Font = Enum.Font.Gotham
usernameLabel.TextSize = 12
usernameLabel.Text = "@"..player.DisplayName
usernameLabel.TextXAlignment = Enum.TextXAlignment.Left
usernameLabel.Parent = infoFrame

-- Tombol Summit / Close GUI
local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0,160,0,40)
closeBtn.Position = UDim2.new(0.5,-80,0.65,0)
closeBtn.BackgroundColor3 = Color3.fromRGB(60,60,60)
closeBtn.Text = "SUMMIT"
closeBtn.TextColor3 = Color3.new(1,1,1)
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 15
closeBtn.Parent = frame
Instance.new("UICorner", closeBtn)

closeBtn.MouseButton1Click:Connect(function()
    stopSpectate()
    stopFly()
    gui:Destroy()
end)
