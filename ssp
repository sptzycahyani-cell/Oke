local usernameLabel = Instance.new("TextLabel")
usernameLabel.Size = UDim2.new(1,-55,0,25)
usernameLabel.Position = UDim2.new(0,55,0,30)
usernameLabel.BackgroundTransparency = 1
usernameLabel.TextColor3 = Color3.fromRGB(180,180,180)
usernameLabel.Font = Enum.Font.Gotham
usernameLabel.TextSize = 12
usernameLabel.Text = "@"..player.DisplayName
usernameLabel.TextXAlignment = Enum.TextXAlignment.Left
usernameLabel.Parent = infoFrame

-- =======================================
-- BUTTON SETUP RAPI
-- =======================================
local buttonY = 0.22
local buttonHeight = 35
local buttonSpacing = 0.02 -- sebagai fraction

local function createButton(text, color, posY, parent)
    local btn = Instance.new("TextButton")
    btn.Size = UDim2.new(0,160,0,buttonHeight)
    btn.Position = UDim2.new(0.5,-80,posY,0)
    btn.BackgroundColor3 = color
    btn.Text = text
    btn.TextColor3 = Color3.new(1,1,1)
    btn.Font = Enum.Font.GothamBold
    btn.TextSize = 14
    btn.Parent = parent
    Instance.new("UICorner", btn)
    return btn
end

local closeBtn = createButton("SUMMIT", Color3.fromRGB(60,60,60), buttonY, frame)
buttonY = buttonY + buttonHeight/460 + buttonSpacing

flyBtn = createButton("FLY (OFF)", Color3.fromRGB(0,150,150), buttonY, frame)
buttonY = buttonY + buttonHeight/460 + buttonSpacing

local stopBtn = createButton("STOP VIEW", Color3.fromRGB(120,120,50), buttonY, frame)
buttonY = buttonY + buttonHeight/460 + buttonSpacing

local revertBtn = createButton("REVERT MORPH", Color3.fromRGB(90,40,40), buttonY, frame)

-- =======================================
-- PLAYER LIST PANEL
-- =======================================
local openListBtn = Instance.new("ImageButton")
openListBtn.Size = UDim2.new(0,25,0,25)
openListBtn.Position = UDim2.new(1,-35,0,5)
openListBtn.Image = "rbxassetid://6031097229"
openListBtn.BackgroundTransparency = 1
openListBtn.Parent = frame

local sideFrame = Instance.new("Frame")
sideFrame.Size = UDim2.new(0,200,0,frame.Size.Y.Offset-10)
sideFrame.Position = UDim2.new(1,10,0,0)
sideFrame.BackgroundColor3 = Color3.fromRGB(25,25,25)
sideFrame.Visible = false
sideFrame.Parent = frame
Instance.new("UICorner", sideFrame)

local scroll = Instance.new("ScrollingFrame")
scroll.Size = UDim2.new(1,0,1,-5)
scroll.Position = UDim2.new(0,0,0,5)
scroll.CanvasSize = UDim2.new(0,0,0,0)
scroll.ScrollBarThickness = 6
scroll.BackgroundTransparency = 1
scroll.Parent = sideFrame

local layout = Instance.new("UIListLayout")
layout.Parent = scroll
layout.Padding = UDim.new(0,5)

layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    scroll.CanvasSize = UDim2.new(0,0,0,layout.AbsoluteContentSize.Y + 10)
end)

openListBtn.MouseButton1Click:Connect(function()
    sideFrame.Visible = not sideFrame.Visible
end)

-- =======================================
-- CREATE PLAYER ITEM
-- =======================================
local function createPlayerItem(plr)
    local item = Instance.new("Frame")
    item.Size = UDim2.new(1,-10,0,70)
    item.BackgroundColor3 = Color3.fromRGB(35,35,35)
    item.Parent = scroll
    Instance.new("UICorner", item)

    local img = Instance.new("ImageLabel")
    img.Size = UDim2.new(0,45,0,45)
    img.Position = UDim2.new(0,5,0.5,-22)
    img.BackgroundTransparency = 1
    img.Image = "rbxthumb://type=AvatarHeadShot&id="..plr.UserId.."&w=150&h=150"
    img.Parent = item

    local nameLabel = Instance.new("TextLabel")
    nameLabel.Size = UDim2.new(1,-150,1,0)
    nameLabel.Position = UDim2.new(0,55,0,0)
    nameLabel.BackgroundTransparency = 1
    nameLabel.Text = plr.Name
    nameLabel.TextColor3 = Color3.new(1,1,1)
    nameLabel.Font = Enum.Font.GothamBold
    nameLabel.TextSize = 14
    nameLabel.Parent = item

    local viewBtn = Instance.new("TextButton")
    viewBtn.Size = UDim2.new(0,50,0,25)
    viewBtn.Position = UDim2.new(1,-150,0.5,-12)
    viewBtn.BackgroundColor3 = Color3.fromRGB(255,200,60)
    viewBtn.Text = "View"
    viewBtn.TextColor3 = Color3.new(1,1,1)
    viewBtn.Parent = item
    Instance.new("UICorner", viewBtn)

    viewBtn.MouseButton1Click:Connect(function()
        if flying then stopFly() end
        spectating = true
        spectateTarget = plr
    end)

    local tpBtn = Instance.new("TextButton")
    tpBtn.Size = UDim2.new(0,50,0,25)
    tpBtn.Position = UDim2.new(1,-95,0.5,-12)
    tpBtn.BackgroundColor3 = Color3.fromRGB(60,120,255)
    tpBtn.Text = "TP"
    tpBtn.TextColor3 = Color3.new(1,1,1)
    tpBtn.Parent = item
    Instance.new("UICorner", tpBtn)

    tpBtn.MouseButton1Click:Connect(function()
        local my = player.Character
        local tg = plr.Character
        if my and tg and my:FindFirstChild("HumanoidRootPart") and tg:FindFirstChild("HumanoidRootPart") then
            my.HumanoidRootPart.CFrame = tg.HumanoidRootPart.CFrame + Vector3.new(0,2,0)
        end
    end)

    local cloneBtn = Instance.new("TextButton")
    cloneBtn.Size = UDim2.new(0,50,0,25)
    cloneBtn.Position = UDim2.new(1,-40,0.5,-12)
    cloneBtn.BackgroundColor3 = Color3.fromRGB(255,120,60)
    cloneBtn.Text = "Clone"
    cloneBtn.TextColor3 = Color3.new(1,1,1)
    cloneBtn.Parent = item
    Instance.new("UICorner", cloneBtn)

    cloneBtn.MouseButton1Click:Connect(function()
        fullClone(plr)
    end)
end

-- =======================================
-- LOAD PLAYER LIST
-- =======================================
for _,plr in ipairs(Players:GetPlayers()) do
    if plr ~= player then createPlayerItem(plr) end
end

Players.PlayerAdded:Connect(function(plr)
    if plr ~= player then createPlayerItem(plr) end
end)

Players.PlayerRemoving:Connect(function(plr)
    for _,v in pairs(scroll:GetChildren()) do
        if v:IsA("Frame") then
            local t = v:FindFirstChildWhichIsA("TextLabel")
            if t and t.Text == plr.Name then v:Destroy() end
        end
    end
end)

-- =======================================
-- BUTTON FUNCTIONALITY
-- =======================================
closeBtn.MouseButton1Click:Connect(function()
    stopSpectate()
    stopFly()
    gui:Destroy()
end)

flyBtn.MouseButton1Click:Connect(function()
    if not flying then
        startFly()
        flyBtn.Text = "FLY (ON)"
        flyBtn.BackgroundColor3 = Color3.fromRGB(150,0,0)
    else
        stopFly()
    end
end)

stopBtn.MouseButton1Click:Connect(stopSpectate)
revertBtn.MouseButton1Click:Connect(revertMorph)
