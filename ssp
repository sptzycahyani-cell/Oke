local iconGui = Instance.new("ScreenGui")
iconGui.Name = "FireIconGUI"
iconGui.ResetOnSpawn = false
iconGui.Parent = player:WaitForChild("PlayerGui")

local fireBtn = Instance.new("TextButton")
fireBtn.Size = UDim2.new(0, 45, 0, 45)
fireBtn.Position = UDim2.new(0.05, 0, 0.5, 0)
fireBtn.BackgroundColor3 = Color3.fromRGB(255, 120, 60)
fireBtn.Text = "ðŸ”¥"
fireBtn.TextScaled = true
fireBtn.Visible = false
fireBtn.Active = true
fireBtn.Draggable = true
fireBtn.Font = Enum.Font.GothamBold
fireBtn.TextColor3 = Color3.new(1,1,1)
fireBtn.Parent = iconGui

local fireCorner = Instance.new("UICorner")
fireCorner.CornerRadius = UDim.new(0, 12)
fireCorner.Parent = fireBtn

fireBtn.MouseButton1Click:Connect(function()
	mainGui.Enabled = true
	fireBtn.Visible = false
end)

-------------------------------------------------------------
-- BUTTON CLOSE â†’ SHOW FIRE ICON
-------------------------------------------------------------
button.MouseButton1Click:Connect(function()
	mainGui.Enabled = false
	fireBtn.Visible = true
end)
