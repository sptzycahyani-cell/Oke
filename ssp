--====================================================
-- Script by Xraxor (Final Cleaned by ChatGPT)
-- Features: TP | FULL Clone | Full Animation | Spectate
--====================================================

local TweenService = game:GetService("TweenService")
local Players = game:GetService("Players")
local player = Players.LocalPlayer
local camera = workspace.CurrentCamera

-- =======================================
-- GLOBAL FOR SPECTATE
-- =======================================
local spectating = false
local spectateTarget = nil

local function stopSpectate()
    spectating = false
    spectateTarget = nil

    if player.Character then
        local hum = player.Character:FindFirstChildOfClass("Humanoid")
        if hum then
            camera.CameraSubject = hum
        end
    end
end

spawn(function()
    while task.wait() do
        if spectating and spectateTarget and spectateTarget.Character then
            local hum = spectateTarget.Character:FindFirstChildOfClass("Humanoid")
            if hum then
                camera.CameraSubject = hum
            end
        end
    end
end)

-- =======================================
-- INTRO ANIMATION
-- =======================================
do
    local introGui = Instance.new("ScreenGui")
    introGui.Name = "IntroAnimation"
    introGui.ResetOnSpawn = false
    introGui.Parent = player:WaitForChild("PlayerGui")

    local introLabel = Instance.new("TextLabel")
    introLabel.Size = UDim2.new(0, 300, 0, 50)
    introLabel.Position = UDim2.new(0.5, -150, 0.4, 0)
    introLabel.BackgroundTransparency = 1
    introLabel.Text = "By : Xraxor"
    introLabel.TextColor3 = Color3.fromRGB(40, 40, 40)
    introLabel.TextScaled = true
    introLabel.Font = Enum.Font.GothamBold
    introLabel.Parent = introGui

    TweenService:Create(introLabel, TweenInfo.new(1.5, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true),
        {Position = UDim2.new(0.5, -150,0.42,0)}):Play()

    TweenService:Create(introLabel, TweenInfo.new(2, Enum.EasingStyle.Sine, Enum.EasingDirection.InOut, -1, true),
        {TextColor3 = Color3.fromRGB(0,0,0)}):Play()

    task.wait(2)
    local fadeOut = TweenService:Create(introLabel, TweenInfo.new(0.5), {TextTransparency = 1})
    fadeOut:Play()
    fadeOut.Completed:Connect(function()
        introGui:Destroy()
    end)
end

-- =======================================
-- GUI MAIN
-- =======================================
local gui = Instance.new("ScreenGui")
gui.Name = "MainGUI"
gui.ResetOnSpawn = false
gui.Parent = player:WaitForChild("PlayerGui")

local frame = Instance.new("Frame")
frame.Size = UDim2.new(0, 260, 0, 290)
frame.Position = UDim2.new(0.4, -130,0.45,-130)
frame.BackgroundColor3 = Color3.fromRGB(20,20,20)
frame.Active = true
frame.Draggable = true
frame.Parent = gui

Instance.new("UICorner", frame).CornerRadius = UDim.new(0,15)

local title = Instance.new("TextLabel")
title.Size = UDim2.new(1,0,0,35)
title.BackgroundTransparency = 1
title.Text = "Mount Atin V2"
title.TextColor3 = Color3.new(1,1,1)
title.Font = Enum.Font.GothamBold
title.TextSize = 16
title.Parent = frame

local closeBtn = Instance.new("TextButton")
closeBtn.Size = UDim2.new(0,160,0,40)
closeBtn.Position = UDim2.new(0.5,-80,0.65,-50)
closeBtn.BackgroundColor3 = Color3.fromRGB(60,60,60)
closeBtn.Text = "SUMMIT"
closeBtn.TextColor3 = Color3.new(1,1,1)
closeBtn.Font = Enum.Font.GothamBold
closeBtn.TextSize = 15
closeBtn.Parent = frame
Instance.new("UICorner", closeBtn).CornerRadius = UDim.new(0,10)

-- =======================================
-- PLAYER LIST BUTTON
-- =======================================
local openListBtn = Instance.new("ImageButton")
openListBtn.Size = UDim2.new(0,25,0,25)
openListBtn.Position = UDim2.new(1,-35,0,5)
openListBtn.BackgroundTransparency = 1
openListBtn.Image = "rbxassetid://6031097229"
openListBtn.Parent = frame

local sideFrame = Instance.new("Frame")
sideFrame.Size = UDim2.new(0,200,0,250)
sideFrame.Position = UDim2.new(1,10,0,0)
sideFrame.BackgroundColor3 = Color3.fromRGB(25,25,25)
sideFrame.Visible = false
sideFrame.Parent = frame
Instance.new("UICorner", sideFrame).CornerRadius = UDim.new(0,12)

local scroll = Instance.new("ScrollingFrame")
scroll.Size = UDim2.new(1,0,1,-5)
scroll.Position = UDim2.new(0,0,0,5)
scroll.CanvasSize = UDim2.new(0,0,0,0)
scroll.ScrollBarThickness = 6
scroll.BackgroundTransparency = 1
scroll.Parent = sideFrame

local layout = Instance.new("UIListLayout")
layout.Parent = scroll
layout.Padding = UDim.new(0,5)
layout.SortOrder = Enum.SortOrder.LayoutOrder

layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
    scroll.CanvasSize = UDim2.new(0,0,0,layout.AbsoluteContentSize.Y + 10)
end)

openListBtn.MouseButton1Click:Connect(function()
    sideFrame.Visible = not sideFrame.Visible
end)

-- =======================================
-- FULL CLONE FUNCTION
-- =======================================
local function fullClone(targetPlr)
    local myChar = player.Character
    local tChar = targetPlr.Character
    if not (myChar and tChar) then return end

    local myHum = myChar:FindFirstChildOfClass("Humanoid")
    local tHum = tChar:FindFirstChildOfClass("Humanoid")
    if not (myHum and tHum) then return end

    -- Full morph (skin, clothing, body, accessories)
    local desc = tHum:GetAppliedDescription()
    myHum:ApplyDescription(desc)

    -- Replace Animate script
    local oldAnim = myChar:FindFirstChild("Animate")
    if oldAnim then oldAnim:Destroy() end

    local tAnim = tChar:FindFirstChild("Animate")
    if tAnim then
        local newA = tAnim:Clone()
        newA.Parent = myChar
    end

    -- Refresh animator
    task.wait(0.1)
    myHum:BuildRigFromAttachments()
end

-- =======================================
-- CREATE PLAYER ITEM
-- =======================================
local function createPlayerItem(plr)
    local item = Instance.new("Frame")
    item.Size = UDim2.new(1,-10,0,70)
    item.BackgroundColor3 = Color3.fromRGB(35,35,35)
    item.Parent = scroll
    Instance.new("UICorner", item).CornerRadius = UDim.new(0,10)

    local img = Instance.new("ImageLabel")
    img.Size = UDim2.new(0,45,0,45)
    img.Position = UDim2.new(0,5,0.5,-22)
    img.BackgroundTransparency = 1
    img.Image = "rbxthumb://type=AvatarHeadShot&id="..plr.UserId.."&w=150&h=150"
    img.Parent = item

    local nameLabel = Instance.new("TextLabel")
    nameLabel.Size = UDim2.new(1,-150,1,0)
    nameLabel.Position = UDim2.new(0,55,0,0)
    nameLabel.BackgroundTransparency = 1
    nameLabel.Text = plr.Name
    nameLabel.TextColor3 = Color3.new(1,1,1)
    nameLabel.Font = Enum.Font.GothamBold
    nameLabel.TextSize = 14
    nameLabel.TextXAlignment = Enum.TextXAlignment.Left
    nameLabel.Parent = item

    -- VIEW BUTTON
    local viewBtn = Instance.new("TextButton")
    viewBtn.Size = UDim2.new(0,50,0,25)
    viewBtn.Position = UDim2.new(1,-150,0.5,-12)
    viewBtn.BackgroundColor3 = Color3.fromRGB(255,200,60)
    viewBtn.Text = "View"
    viewBtn.TextColor3 = Color3.new(1,1,1)
    viewBtn.Font = Enum.Font.GothamBold
    viewBtn.TextSize = 14
    viewBtn.Parent = item
    Instance.new("UICorner", viewBtn)

    viewBtn.MouseButton1Click:Connect(function()
        if plr.Character then
            spectating = true
            spectateTarget = plr
        end
    end)

    -- TP BUTTON
    local tpBtn = Instance.new("TextButton")
    tpBtn.Size = UDim2.new(0,50,0,25)
    tpBtn.Position = UDim2.new(1,-95,0.5,-12)
    tpBtn.BackgroundColor3 = Color3.fromRGB(60,120,255)
    tpBtn.Text = "TP"
    tpBtn.TextColor3 = Color3.new(1,1,1)
    tpBtn.Font = Enum.Font.GothamBold
    tpBtn.TextSize = 14
    tpBtn.Parent = item
    Instance.new("UICorner", tpBtn)

    tpBtn.MouseButton1Click:Connect(function()
        local my = player.Character
        local tg = plr.Character
        if my and tg and my:FindFirstChild("HumanoidRootPart") and tg:FindFirstChild("HumanoidRootPart") then
            my.HumanoidRootPart.CFrame = tg.HumanoidRootPart.CFrame + Vector3.new(0,2,0)
        end
    end)

    -- CLONE BUTTON (FULL)
    local cloneBtn = Instance.new("TextButton")
    cloneBtn.Size = UDim2.new(0,50,0,25)
    cloneBtn.Position = UDim2.new(1,-40,0.5,-12)
    cloneBtn.BackgroundColor3 = Color3.fromRGB(255,120,60)
    cloneBtn.Text = "Clone"
    cloneBtn.TextColor3 = Color3.new(1,1,1)
    cloneBtn.Font = Enum.Font.GothamBold
    cloneBtn.TextSize = 14
    cloneBtn.Parent = item
    Instance.new("UICorner", cloneBtn)

    cloneBtn.MouseButton1Click:Connect(function()
        fullClone(plr)
    end)
end

-- LOAD PLAYER LIST
for _,plr in ipairs(Players:GetPlayers()) do
    if plr ~= player then createPlayerItem(plr) end
end

Players.PlayerAdded:Connect(function(plr)
    if plr ~= player then createPlayerItem(plr) end
end)

Players.PlayerRemoving:Connect(function(plr)
    for _,v in pairs(scroll:GetChildren()) do
        if v:IsA("Frame") then
            local lbl = v:FindFirstChildWhichIsA("TextLabel")
            if lbl and lbl.Text == plr.Name then v:Destroy() end
        end
    end
end)

-- STOP VIEW BUTTON
local unviewBtn = Instance.new("TextButton")
unviewBtn.Size = UDim2.new(0,160,0,35)
unviewBtn.Position = UDim2.new(0.5,-80,0.7,0)
unviewBtn.BackgroundColor3 = Color3.fromRGB(120,120,50)
unviewBtn.Text = "STOP VIEW"
unviewBtn.TextColor3 = Color3.new(1,1,1)
unviewBtn.Font = Enum.Font.GothamBold
unviewBtn.TextSize = 14
unviewBtn.Parent = frame
Instance.new("UICorner", unviewBtn).CornerRadius = UDim.new(0,10)

unviewBtn.MouseButton1Click:Connect(function()
    stopSpectate()
end)

closeBtn.MouseButton1Click:Connect(function()
    stopSpectate()
    gui:Destroy()
end)
