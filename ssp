scroll.BackgroundTransparency = 1
scroll.Parent = sideFrame

local layout = Instance.new("UIListLayout")
layout.Parent = scroll
layout.Padding = UDim.new(0, 5)
layout.HorizontalAlignment = Enum.HorizontalAlignment.Center
layout.SortOrder = Enum.SortOrder.LayoutOrder

layout:GetPropertyChangedSignal("AbsoluteContentSize"):Connect(function()
	scroll.CanvasSize = UDim2.new(0, 0, 0, layout.AbsoluteContentSize.Y + 10)
end)

iconButton.MouseButton1Click:Connect(function()
	sideFrame.Visible = not sideFrame.Visible
end)

-------------------------------------------------------------
-- TELEPORT PLAYER LIST
-------------------------------------------------------------
local PlayersService = game:GetService("Players")

local function addPlayer(plr)
    local item = Instance.new("Frame")
    item.Size = UDim2.new(1, -10, 0, 50)
    item.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
    item.Parent = scroll

    local corner = Instance.new("UICorner")
    corner.CornerRadius = UDim.new(0, 12)
    corner.Parent = item

    local img = Instance.new("ImageLabel")
    img.Size = UDim2.new(0, 40, 0, 40)
    img.Position = UDim2.new(0, 5, 0.5, -20)
    img.Image = "rbxthumb://type=AvatarHeadShot&id="..plr.UserId.."&w=150&h=150"
    img.BackgroundTransparency = 1
    img.Parent = item

    local name = Instance.new("TextLabel")
    name.Size = UDim2.new(1, -100, 1, 0)
    name.Position = UDim2.new(0, 50, 0, 0)
    name.Text = plr.Name
    name.TextColor3 = Color3.new(1,1,1)
    name.BackgroundTransparency = 1
    name.Font = Enum.Font.GothamBold
    name.TextSize = 14
    name.TextXAlignment = Enum.TextXAlignment.Left
    name.Parent = item

    local tp = Instance.new("TextButton")
    tp.Size = UDim2.new(0, 60, 0, 30)
    tp.Position = UDim2.new(1, -70, 0.5, -15)
    tp.Text = "TP"
    tp.Font = Enum.Font.GothamBold
    tp.TextSize = 14
    tp.TextColor3 = Color3.new(1,1,1)
    tp.BackgroundColor3 = Color3.fromRGB(60,120,255)
    tp.Parent = item

    local tpCorner = Instance.new("UICorner")
    tpCorner.Parent = tp

    tp.MouseButton1Click:Connect(function()
        local myChar = player.Character
        local target = plr.Character
        if myChar and target and myChar:FindFirstChild("HumanoidRootPart") and target:FindFirstChild("HumanoidRootPart") then
            myChar.HumanoidRootPart.CFrame = target.HumanoidRootPart.CFrame + Vector3.new(0,2,0)
        end
    end)
end

for _,plr in pairs(PlayersService:GetPlayers()) do
    if plr ~= player then addPlayer(plr) end
end

PlayersService.PlayerAdded:Connect(function(plr)
	if plr ~= player then addPlayer(plr) end
end)

PlayersService.PlayerRemoving:Connect(function(plr)
	for _,v in ipairs(scroll:GetChildren()) do
		if v:IsA("Frame") then
			local label = v:FindFirstChildWhichIsA("TextLabel")
			if label and label.Text == plr.Name then v:Destroy() end
		end
	end
end)

-------------------------------------------------------------
-- üî• OPEN GUI FROM FIRE ICON
-------------------------------------------------------------
fireButton.MouseButton1Click:Connect(function()
	mainGui.Enabled = true    -- show GUI
	fireButton.Visible = false
end)

-------------------------------------------------------------
-- CLOSE GUI ‚Üí BACK TO üî• ICON
-------------------------------------------------------------
button.MouseButton1Click:Connect(function()
	mainGui.Enabled = false
	fireButton.Visible = true
end)
